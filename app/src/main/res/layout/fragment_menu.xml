<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.menu.MenuFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitleMenu"
            android:layout_width="224dp"
            android:layout_height="67dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ceviche_one"
            android:text="GESTION DE PEDIDO"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorBlanco"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:dividerInsetEnd="32dp"
            app:dividerInsetStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleMenu" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlat_2"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="181dp"
            android:layout_height="213dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/colorBlanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/cardPlat_1"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard2Plat1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/descriptionImagesMenuPlat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/platillos_img_1" />

                <ImageView
                    android:id="@+id/imgCard2Plat2"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/descriptionImagesMenuPlat"
                    app:layout_constraintBottom_toBottomOf="@+id/imgCard2Plat1"
                    app:layout_constraintEnd_toEndOf="@+id/imgCard2Plat1"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/imgCard2Plat1"
                    app:layout_constraintTop_toTopOf="@+id/imgCard2Plat1"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/contenido_platillo_img_2" />

                <TextView
                    android:id="@+id/txtNamePlat"
                    android:layout_width="155dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="12dp"
                    android:text="Alas con papas fritas y arroz chaufa"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.521"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgCard2Plat1" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNamePlat"
                    app:srcCompat="@drawable/baseline_menu_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlat_1"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="179dp"
            android:layout_height="213dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="336dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/colorBlanco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/descriptionImagesMenuPlat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/platillos_img_1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/descriptionImagesMenuPlat"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"
                    app:srcCompat="@drawable/contenido_platillo_img_1" />

                <TextView
                    android:id="@+id/txtNamePlat1"
                    android:layout_width="155dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="12dp"
                    android:text="Alas con papas fritas y arroz chaufa"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.521"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/imgMenuIcon"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNamePlat1"
                    app:srcCompat="@drawable/baseline_menu_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>