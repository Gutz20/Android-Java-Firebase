<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#DECDC6"
    android:layout_marginBottom="20dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/imagenOffer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icono_de_image_512" />

        <TextView
            android:id="@+id/detailsOffer"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:maxLines="3"
            android:gravity="start"
            android:text="+ Pollo a la Brasa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetailOffer"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Detalle"
            app:icon="@drawable/arrow_right_home"
            app:iconTint="#000000"
            android:layout_gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>