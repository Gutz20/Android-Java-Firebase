<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cart"
    android:padding="16dp"
    tools:context=".ui.user.cart.components.DetailTicketFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stepTextView"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/ceviche_one"
            android:gravity="center"
            android:shadowColor="#5BACFF"
            android:shadowDx="-5"
            android:shadowDy="7"
            android:shadowRadius="2"
            android:text="DETALLE DEL PEDIDO"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/logo_white_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="Detalle de la compra"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbRecibido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:clickable="false"
                    android:text="Compra recibida"
                    android:textColor="@color/colorBlanco" />

                <CheckBox
                    android:id="@+id/cbConfirmado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:text="Compra Confirmada"
                    android:textColor="@color/colorBlanco" />

                <CheckBox
                    android:id="@+id/cbOrdenado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:text="Compra Ordenada"
                    android:textColor="@color/colorBlanco" />

                <CheckBox
                    android:id="@+id/cbCamino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:text="Compra en Camino"
                    android:textColor="@color/colorBlanco" />

                <CheckBox
                    android:id="@+id/cbEntregado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:text="Entregado"
                    android:textColor="@color/colorBlanco" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/divider3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DirecciÃ³n"
                    android:textColor="@color/colorBlanco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Av. Siempre viva - Mnz 5. "
                    android:textColor="@color/colorGris" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textColor="@color/colorBlanco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="987654321"
                    android:textColor="@color/colorGris" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Â¡COMPLETADO!"
                android:textColor="@color/colorBlanco"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHome"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir al Inicio"
                android:textAllCaps="true"
                android:textColor="@color/colorBlanco"

                app:icon="@drawable/ic_home"
                app:iconTint="@color/colorBlanco" />

        </LinearLayout>


        <!--        <com.google.android.material.slider.RangeSlider-->
        <!--            android:id="@+id/seekBar3"-->
        <!--            style="@style/Widget.AppCompat.SeekBar.Discrete"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:stepSize="1.0"-->
        <!--            android:valueFrom="0.0"-->
        <!--            android:valueTo="10.0" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Paqta Food agradece su visita ðŸ˜Š"
            android:textColor="@color/colorBlanco" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Â¡Pagado con Exito!"
                android:textColor="@color/colorBlanco"
                android:textSize="22sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>